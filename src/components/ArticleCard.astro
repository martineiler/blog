---
interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
  slug: string;
  readingTime: string;
}

const { title, description, date, tags, slug, readingTime } = Astro.props;

const formattedDate = date.toLocaleDateString('en-GB', {
  day: '2-digit',
  month: 'short',
  year: 'numeric',
});
---

<article class="py-8">
  <div class="mb-3">
    <span class="text-xs font-light text-[#555555]">{formattedDate} Â· {readingTime}</span>
  </div>

  <a href={`/blog/${slug}`} class="block no-underline group">
    <h3
      class="font-display font-light text-[1.75rem] leading-[1.2] text-[#0d0d0d] group-hover:text-[#cc0000] transition-colors mb-3"
      style="font-variation-settings: 'wdth' 75;"
    >
      {title}
    </h3>
  </a>

  <p class="text-sm font-light text-[#555555] leading-relaxed mb-4">
    {description}
  </p>

  <div class="flex flex-wrap gap-3">
    {tags.map((tag) => (
      <span class="text-xs font-normal uppercase tracking-[0.05em] text-[#555555] hover:text-[#cc0000] transition-colors cursor-default">
        {tag}
      </span>
    ))}
  </div>
</article>
