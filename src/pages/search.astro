---
import Base from '../layouts/Base.astro';
---

<Base title="Search" description="Search all articles on eiler.dk." noindex={true}>
  <h1
    class="font-sans font-extralight text-[2.5rem] leading-[1.15] tracking-[-0.02em] text-[#0d0d0d] mb-8"
  >
    Search
  </h1>

  <hr class="border-t border-[#e0e0e0] mb-10" />

  <div id="search" class="max-w-[680px]"></div>
</Base>

<link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
<script is:inline src="/pagefind/pagefind-ui.js"></script>
<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    new PagefindUI({ element: '#search', showSubResults: true });
  });
</script>
